<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.dg.apptabletteandroid.fragments.Profils.AddProfilFragment"
    android:weightSum="5">

    <Button
        android:text="Valider"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonModifier"
        android:layout_marginEnd="116dp"
        android:layout_alignBaseline="@+id/titre"
        android:background="@android:color/holo_green_light"
        android:layout_alignBottom="@+id/titre"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Annuler"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAnnulerAjout"
        android:background="@android:color/holo_red_dark"
        android:layout_marginStart="108dp"
        android:layout_alignTop="@+id/titre"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nom"
        android:ems="10"
        android:id="@+id/editLastNameTextField"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/editNameTextField" />

    <TextView
        android:text="Ajouter un nouveau Profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/titre"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:id="@+id/spinner_select_avatar"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="22dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Prenom"
        android:ems="10"
        android:id="@+id/editNameTextField"
        android:layout_marginEnd="37dp"
        style="@android:style/Widget.EditText"
        android:layout_below="@+id/buttonAnnulerAjout"
        android:layout_toStartOf="@+id/buttonModifier"
        android:layout_marginTop="104dp" />

    <TextView
        android:text="Modifier la photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/buttonAnnulerAjout" />

    <Button
        android:text="Pas susceptible de franchir la barriÃ¨re"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:id="@+id/barriereButton"
        android:textSize="18sp"
        android:layout_below="@+id/editLastNameTextField"
        android:layout_alignEnd="@+id/editLastNameTextField"
        android:layout_marginTop="100dp" />

    <TextView
        android:text="Prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignBaseline="@+id/editNameTextField"
        android:layout_alignBottom="@+id/editNameTextField"
        android:layout_alignStart="@+id/barriereButton"
        android:layout_marginStart="28dp" />
</RelativeLayout>




