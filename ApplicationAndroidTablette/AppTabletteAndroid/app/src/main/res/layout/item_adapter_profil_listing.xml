<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


<ImageView
    android:id="@+id/photoProfil"
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:srcCompat="@mipmap/ic_launcher"
    android:background="#AAA"
    />

<TextView
    android:id="@+id/prenomNomItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/photoProfil"
    android:layout_alignTop="@+id/photoProfil"
    android:textStyle="bold"
    android:text="Pseudo"
    />

<TextView
    android:id="@+id/status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:layout_alignLeft="@+id/prenomNomItem"
    android:layout_below="@+id/prenomNomItem"
    android:text="Status"
    />

