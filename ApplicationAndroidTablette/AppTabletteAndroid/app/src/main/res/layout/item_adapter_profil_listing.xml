<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


<ImageView
    android:id="@+id/photoProfil"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="50dp"
    app:srcCompat="@mipmap/ic_launcher"
    android:background="#AAA"
    />

    <TextView
        android:id="@+id/prenomNomItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Pseudo"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/photoProfil"
        android:layout_marginStart="52dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:background="@drawable/trash_p"
        android:id="@+id/buttonSuppr"
        android:layout_marginRight="80dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp" />

    <ImageButton
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:id="@+id/buttonEdit"
        android:text="Editer"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/edit"
        android:layout_alignBottom="@+id/buttonSuppr"
        android:layout_toStartOf="@+id/buttonSuppr"
        android:layout_marginEnd="54dp" />
